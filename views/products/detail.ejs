<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/header') %>
  
  <main class="container mx-auto px-6 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="md:flex">
        <div class="md:flex-shrink-0">
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="h-48 w-full object-cover md:w-48">
        </div>
        <div class="p-8">
          <h1 class="text-3xl font-bold mb-2"><%= product.name %></h1>
          <p class="text-gray-600 mb-4"><%= product.description %></p>
          <div class="mb-4">
            <span class="text-2xl font-bold">$<%= product.price.toFixed(2) %></span>
          </div>
          <form action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>">
            <div class="mb-4">
              <label for="quantity" class="block text-gray-700 mb-2">Quantity:</label>
              <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>" class="w-20 px-3 py-2 border rounded">
            </div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add to Cart</button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>